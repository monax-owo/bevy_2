{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "watch",
      "args": ["-x", "run -- --gui"],
      "problemMatcher": ["$rustc"],
      "label": "rust: hot reload with gui"
    },
    {
      "type": "cargo",
      "command": "sweep",
      "args": ["--time", "1"],
      "problemMatcher": ["$rustc"],
      "label": "rust: sweep (1 DAY)"
    }
  ]
}
